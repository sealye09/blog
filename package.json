{
  "name": "blog",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "description": "GitHub Pages 静态站点生成",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsx scripts/blog.ts",
