  "devDependencies": {
    "@types/html-minifier-terser": "^7.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.7.5",
    "html-minifier-terser": "^7.2.0",
    "jsdom": "^27.2.0",
    "lefthook": "^1.7.9",
